# PRODUCTION ENVIRONMENT CONFIGURATION
# ⚠️  SECURITY CRITICAL: Replace all placeholder values with actual production credentials
# This file should be encrypted and stored securely in production

# ========================================
# ENVIRONMENT IDENTIFICATION
# ========================================
NODE_ENV=production
DEBUG_MODE=false
ENABLE_DEV_COMMANDS=false

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=4828
HOST=0.0.0.0

# CORS Configuration - Update with your production domain
CORS_ORIGIN=https://your-production-domain.com

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL Production Database
DATABASE_URL="postgresql://username:password@db-host:5432/ganggpt_production"
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL="redis://redis-host:6379"
REDIS_PASSWORD="your-secure-redis-password"
REDIS_TLS=true
REDIS_CLUSTER_MODE=false

# ========================================
# AZURE OPENAI CONFIGURATION
# ========================================
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-32-character-api-key"
AZURE_OPENAI_API_VERSION="2024-02-01"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4o-mini"

# AI Rate Limiting
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.7
AI_MEMORY_RETENTION_DAYS=30
AI_MAX_CONCURRENT_REQUESTS=10

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT Configuration - CRITICAL: Generate new secrets for production
JWT_SECRET="your-256-bit-jwt-secret-key-replace-with-secure-random-string"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-256-bit-refresh-secret-key-replace-with-secure-random-string"
JWT_REFRESH_EXPIRES_IN="7d"

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# HTTPS & SSL CONFIGURATION
# ========================================
HTTPS_ENABLED=true
SSL_CERT_PATH="/path/to/ssl/certificate.crt"
SSL_KEY_PATH="/path/to/ssl/private.key"
SSL_CA_PATH="/path/to/ssl/ca-bundle.crt"

# HSTS Configuration
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# ========================================
# RAGEMP SERVER CONFIGURATION
# ========================================
RAGEMP_NAME="GangGPT Production Server"
RAGEMP_GAMEMODE="ganggpt"
RAGEMP_MAP="GangGPT"
RAGEMP_PASSWORD="your-server-password"
RAGEMP_MAX_PLAYERS=1000
RAGEMP_ANNOUNCE=true
RAGEMP_SYNC_RATE=40

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH="/var/log/ganggpt/application.log"
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Structured Logging
LOG_FORMAT=json
LOG_TIMESTAMP=true
LOG_CORRELATION_ID=true

# ========================================
# MONITORING & METRICS
# ========================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH="/metrics"

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH="/health"

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_COMPANIONS=true
ENABLE_DYNAMIC_MISSIONS=true
ENABLE_FACTION_WARS=true
ENABLE_PLAYER_ANALYTICS=true
ENABLE_VOICE_CHAT_AI=false

# ========================================
# GAME CONFIGURATION
# ========================================
MAX_FACTIONS=20
DEFAULT_FACTION_INFLUENCE=10
FACTION_UPDATE_INTERVAL_MS=300000
MISSION_GENERATION_COOLDOWN_MS=60000
MAX_ACTIVE_MISSIONS_PER_PLAYER=3
MISSION_DIFFICULTY_SCALING=true
